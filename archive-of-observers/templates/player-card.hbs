<div class="player-slot" data-user-id="{{userId}}">
  <div class="player-card" data-user-id="{{userId}}"
       style="border: 3px solid {{borderColor}}; box-shadow: 0 0 15px {{shadowColor}};">

    <!-- Character Portrait -->
    <img class="portrait" src="{{portrait}}" alt="{{name}}">

    <!-- Flash layers -->
    <div class="damage-overlay"></div>
    <div class="heal-overlay"></div>

    <!-- Overlay Info -->
    <div class="overlay">
      <div class="name">{{name}}</div>

      <div class="stat hp">
        HP: <span class="value">{{hp}}</span>
        AC: <span class="value">{{ac}}</span>
        Level: <span class="value">{{level}}</span>
      </div>

      <div class="stat">Race: {{race}}</div>

      {{#each classes}}
        <div class="stat">
          {{name}} {{levels}}
          {{#if subclass}}<span class="subclass">— {{subclass}}</span>{{/if}}
        </div>
      {{/each}}
    </div>
  </div>

  <!-- ✅ bubbles live OUTSIDE the card -->
  <div class="bubble-container" data-user-id="{{userId}}"></div>
</div>
