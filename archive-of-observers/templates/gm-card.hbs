<div class="player-slot" data-user-id="{{gmUserId}}">
  <div class="player-card gm-card" data-user-id="{{gmUserId}}"
       style="border: 3px solid {{borderColor}}; box-shadow: 0 0 15px {{shadowColor}};">
    <img class="portrait" src="{{portrait}}" alt="{{title}}">
    <div class="overlay">
      <div class="name">{{title}}</div>
      Scene:
      <div class="stat scene-name">{{scene}}</div>
    </div>
  </div>

  <!-- âœ… bubbles -->
  <div class="bubble-container" data-user-id="{{gmUserId}}"></div>
</div>
